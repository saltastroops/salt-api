@Library('saao-shared-library') _

pipeline {
  agent any

  stages {
    stage('Perform linting and testing') {
      agent {
        dockerfile {
          filename 'Dockerfile2'
          dir 'jenkins'
          args '-v saltapi-pipcache:/root/.cache -u 0:0'
        }
      }

      steps {
        script {
          success = saao.runPythonTests(
                  'black': ['src', 'tests'],
                  // 'mypy': ['src'],
                  // 'pytest': ['tests'],
                  'ruff': ['src', 'tests']
          )
          if (!success) {
            error('Linting and/or testing was unsuccessful.')
          }
        }
      }
    }
  }
}
