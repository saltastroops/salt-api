pipeline {
  agent {
    dockerfile {
      filename 'Dockerfile'
      dir 'jenkins'
      args '-v salt-api-venv:/venv -u 0:0'
    }
  }
  environment {
    ENV_FILE = credentials('salt-api-env')
  }
  stages {
    stage("Run tests") {
      steps {
        sh './jenkins/run-tests.sh'
      }
    }
  }
}
