def dockerfileConfig() {
  return {
    filename 'Dockerfile'
    dir 'jenkins'
    args '-v saltapi-pipcache:/root/.cache -u 0:0'
  }
}

pipeline {
  agent any

  stages {
    stage('Perform linting tests') {
      agent {
        dockerfile dockerfileConfig()
      }
      steps {
        echo 'Linting...'
      }
    }
  }
}
